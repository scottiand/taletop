<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="FableDevice.Views.BetaTestPage"
    Padding="20">
	<StackLayout HorizontalOptions="Center" VerticalOptions="Start">
        <Label Text="Questions, comments, suggestions, and bug reports can be e-mailed to"
            HorizontalTextAlignment="Center"/>
        <Entry Text="scottibanderson@gmail.com"
            HorizontalTextAlignment="Center"
            Placeholder="scottibanderson@gmail.com"
            PropertyChanged="Handle_PropertyChanged"/>
        <Label Text="Please check the Known Bugs and planned features below before submitting a bug or making a suggestion."
            HorizontalTextAlignment="Center"/>
        <Label Text="Changelog, Known Bugs, and Planned Features can be found at:"
            HorizontalTextAlignment="Center"/>
        <Entry Text="https://docs.google.com/document/d/15VC-QBkfmkfC1NApbAL8_Eg42pdMquRghqPFmAzavRo/edit?usp=sharing"
            HorizontalTextAlignment="Center"
            Placeholder="https://docs.google.com/document/d/15VC-QBkfmkfC1NApbAL8_Eg42pdMquRghqPFmAzavRo/edit?usp=sharing"
            PropertyChanged="Handle_PropertyChanged"/>
    </StackLayout>
</ContentPage>
