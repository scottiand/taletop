            FontSize="30"/>
        <Button Style="{StaticResource MenuButton}"
            x:Name="backgroundButton"
            HorizontalOptions="Fill"
            Text="No Background Chosen"
            FontSize="20"
            VerticalOptions="FillAndExpand"
            Clicked="backgroundClicked"/>
        <Label Style="{StaticResource BasicLabel}"
            Text="Details (Optional)"
            FontSize="30"/>
        <Button Style="{StaticResource MenuButton}"
            HorizontalOptions="Fill"
            Text="Edit Details"
            FontSize="20"
            VerticalOptions="FillAndExpand"
            Clicked="detailsClicked"/>
