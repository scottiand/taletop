            FontSize="20"
            Clicked="nameClicked"
            x:Name="nameButton"/>
       <StackLayout Orientation="Horizontal"
                VerticalOptions="EndAndExpand">
            <Button Style="{StaticResource CancelButton}"
                Clicked="cancelClicked">
                <Button.IsVisible>
                    <OnPlatform x:TypeArguments="x:Boolean"
                        iOS="true"
                        Android="false">
                    </OnPlatform>
                </Button.IsVisible>
            </Button>
            <Button Style="{StaticResource MenuButton}"
                x:Name="nextButton"
